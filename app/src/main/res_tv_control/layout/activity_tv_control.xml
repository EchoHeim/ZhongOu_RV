<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_tv_control"
    tools:context=".activity.Activity_TV_Control">

    <Button
        android:id="@+id/imageButton_tv_power"

        android:layout_width="@dimen/pad_width"
        android:layout_height="@dimen/pad_height"
        android:layout_marginTop="@dimen/pad_margin_top"
        android:layout_marginBottom="@dimen/pad_margin_bottom"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="180dp"

        android:background="@drawable/activity_tv_power"
        android:onClick="tv_powerMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_tv_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageButton_tv_up"
        android:layout_width="@dimen/pad_width"
        android:layout_height="@dimen/pad_height"
        android:layout_marginTop="@dimen/pad_margin_top"
        android:layout_marginBottom="@dimen/pad_margin_bottom"

        android:background="@drawable/activity_tv_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_tv_down"
        app:layout_constraintStart_toEndOf="@id/imageButton_tv_power"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageButton_tv_down"

        android:layout_width="@dimen/pad_width"
        android:layout_height="@dimen/pad_height"
        android:layout_marginTop="@dimen/pad_margin_top"
        android:layout_marginBottom="@dimen/pad_margin_bottom"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="180dp"
        android:background="@drawable/activity_tv_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageButton_tv_up"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>