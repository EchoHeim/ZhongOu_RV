    <ImageButton
        android:id="@+id/imageButton_high_pitch"
        android:layout_width="@dimen/pad_width"
        android:layout_height="@dimen/pad_height"
        android:layout_marginTop="@dimen/pad_margin_top"
        android:layout_marginBottom="@dimen/pad_margin_bottom"
        android:background="@drawable/icon_reserve_en"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_tv"
        app:layout_constraintStart_toEndOf="@id/imageButton_led"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_tv"
        android:layout_width="@dimen/pad_width"
        android:layout_height="@dimen/pad_height"
        android:layout_marginTop="@dimen/pad_margin_top"
        android:layout_marginBottom="@dimen/pad_margin_bottom"
        android:background="@drawable/activity_tv_en"

        android:onClick="tvMessage"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/imageButton_window"
        android:layout_width="@dimen/pad_width"
        android:layout_height="@dimen/pad_height"
        android:layout_marginTop="@dimen/pad_margin_top"
        android:layout_marginBottom="@dimen/pad_margin_bottom"
        android:background="@drawable/activity_window_en"

        android:onClick="windowMessage"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_inverter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton_tv"
        app:layout_constraintTop_toTopOf="parent" />
