<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_window_control_en"
    tools:context=".activity.Activity_Window_Control">

    <Button
        android:id="@+id/imageButton_window_on"

        android:layout_width="@dimen/pad_width"
        android:layout_height="@dimen/pad_height"
        android:layout_marginTop="@dimen/pad_margin_top"
        android:layout_marginBottom="@dimen/pad_margin_bottom"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="200dp"

        android:background="@drawable/activity_window_on_en"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_window_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/imageButton_window_off"

        android:layout_width="@dimen/pad_width"
        android:layout_height="@dimen/pad_height"
        android:layout_marginTop="@dimen/pad_margin_top"
        android:layout_marginBottom="@dimen/pad_margin_bottom"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/activity_window_off_en"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageButton_window_on"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>